# Rename to .env and fill in

# OpenAI
OPENAI_API_KEY=sk-...

# ElevenLabs
ELEVENLABS_API_KEY=...

# ElevenLabs voice
ELEVENLABS_VOICE_ID=YOUR_VOICE_ID

# YouTube OAuth (optional if you want uploads)
YOUTUBE_CLIENT_SECRETS=./client_secret.json
YOUTUBE_DEFAULT_CATEGORY_ID=22
YOUTUBE_DEFAULT_PRIVACY_STATUS=public
YOUTUBE_DEFAULT_TAGS=sermon,daily,faith,reflection

# Brand / output
BRAND_NAME=eJesus
OUTPUT_DIR=./output

# Renderer toggles
EJESUS_LOCAL_RENDER=true
EJESUS_UPLOAD=false
EJESUS_SEED_TOPIC=
EJESUS_INTRO_SECONDS=8
EJESUS_FONT_PATH=/usr/share/fonts/truetype/dejavu/DejaVuSans.ttf
EJESUS_RESOLUTION=1920x1080
