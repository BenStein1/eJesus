# Rename to .env and fill in

# --- OFFLINE TESTING (skip APIs) ---
EJESUS_OFFLINE=true
EJESUS_TEST_BASENAME=Embracing the Present Moment
# Optional explicit paths (override the basename rule)
# EJESUS_TEST_TEXT=./output/Embracing the Present Moment.txt
# EJESUS_TEST_MP3=./output/Embracing the Present Moment.mp3

# OpenAI
OPENAI_API_KEY=sk-...

# ElevenLabs
ELEVENLABS_API_KEY=xyz...

# ElevenLabs voice
ELEVENLABS_VOICE_ID=xyz...

# ElevenLabs output format (optional; will auto-fallback if disallowed)
# Common safe choices: mp3_44100_128, mp3_44100_64
ELEVENLABS_OUTPUT_FORMAT=mp3_44100_128

# ElevenLabs voice settings
ELEVENLABS_STABILITY=0.30
ELEVENLABS_SIMILARITY=0.75
ELEVENLABS_STYLE=0.75

# Short-sermon knob for cheaper testing
EJESUS_SERMON_WORDS=220

# YouTube OAuth (optional if you want uploads)
YOUTUBE_CLIENT_SECRETS=./client_secret.json
YOUTUBE_DEFAULT_CATEGORY_ID=22
YOUTUBE_DEFAULT_PRIVACY_STATUS=public
YOUTUBE_DEFAULT_TAGS=sermon,daily,faith,reflection

# Brand / output
BRAND_NAME=eJesus
OUTPUT_DIR=./output

# Renderer toggles
EJESUS_LOCAL_RENDER=true
EJESUS_UPLOAD=false
EJESUS_SEED_TOPIC=
EJESUS_INTRO_SECONDS=8
EJESUS_FONT_PATH=/usr/share/fonts/truetype/dejavu/DejaVuSans.ttf
EJESUS_RESOLUTION=1920x1080
KB_ZOOM=1.20
